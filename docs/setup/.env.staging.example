# ========================================
# STAGING ENVIRONMENT CONFIGURATION
# ========================================

# Basic Configuration
ENVIRONMENT=staging
APP_VERSION=staging-latest
DOMAIN=staging.yourdomain.com

# Database Configuration
MONGODB_USER=copilotos_staging
MONGODB_PASSWORD=secure_staging_password_change_me
REDIS_PASSWORD=secure_staging_redis_password

# Security
JWT_SECRET_KEY=staging-jwt-secret-key-change-me-to-something-very-secure
SECRET_KEY=staging-session-secret-change-me-too
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_DAYS=7

# URLs
FRONTEND_URL=https://staging.yourdomain.com
PUBLIC_API_URL=https://api-staging.yourdomain.com
API_HOST=api-staging.yourdomain.com

# External Services
ALETHEIA_URL=http://aletheia-staging:8000
ALETHEIA_API_KEY=your-aletheia-staging-api-key

# Performance & Limits
RATE_LIMIT=200
MAX_PROMPT_LENGTH=10000
LOG_LEVEL=debug
DEBUG=true

# Monitoring
JAEGER_ENDPOINT=http://jaeger-staging:14268/api/traces
OTEL_ENDPOINT=http://jaeger-staging:4317

# GitHub Container Registry
GITHUB_USER=your-github-username
TOKEN=your-github-token-with-package-read-permissions

# Deployment
DEPLOY_PATH=/home/jf/copilotos-bridge
BACKUP_DIR=/home/jf/backups/copilotos-staging