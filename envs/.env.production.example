# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================

# Database (use production cluster)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/copilotos_bridge?retryWrites=true&w=majority
REDIS_URL=redis://redis.production.com:6379/0

# Security (strong production values)
JWT_SECRET_KEY=REPLACE_WITH_STRONG_SECRET_FROM_VAULT
PASSWORD_HASH_ROUNDS=12

# Server
HOST=0.0.0.0
PORT=8001
DEBUG=false
RELOAD=false
LOG_LEVEL=INFO

# CORS (restrictive for production)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# External APIs (production endpoints)
SAPTIVA_API_URL=https://api.saptiva.ai
SAPTIVA_API_KEY=REPLACE_WITH_PRODUCTION_KEY
ALETHEIA_API_URL=https://aletheia.saptiva.ai
ALETHEIA_API_KEY=REPLACE_WITH_PRODUCTION_KEY

# Rate limiting (strict for production)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Development tools (disabled in production)
MONGO_EXPRESS_ENABLED=false
REDIS_COMMANDER_ENABLED=false

# Monitoring (enabled for production)
OTEL_ENABLED=true
OTEL_SERVICE_NAME=copilotos-bridge-api
OTEL_EXPORTER_ENDPOINT=https://your-otel-collector.com:4317
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.01

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket