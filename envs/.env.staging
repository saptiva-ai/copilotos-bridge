# ========================================
# STAGING ENVIRONMENT CONFIGURATION
# ========================================

# ========================================
# BASIC CONFIGURATION
# ========================================
COMPOSE_PROJECT_NAME=copilotos-staging
DOMAIN=yourdomain.com
APP_VERSION=staging-latest

# ========================================
# FRONTEND CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=https://api-staging.yourdomain.com
NODE_ENV=staging

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_USER=copilotos_staging_user
MONGODB_PASSWORD=staging_secure_password_123
MONGODB_DATABASE=copilotos_staging

REDIS_PASSWORD=staging_redis_password_456

# ========================================
# AUTHENTICATION / SECURITY
# ========================================
JWT_SECRET_KEY=staging-jwt-secret-key-change-me
SECRET_KEY=staging-secret-key-change-me
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# EXTERNAL APIS
# ========================================
SAPTIVA_API_KEY=your-saptiva-api-key-here
SAPTIVA_BASE_URL=https://api.saptiva.com
SAPTIVA_TIMEOUT=60
SAPTIVA_MAX_RETRIES=5

ALETHEIA_BASE_URL=https://aletheia-staging.yourdomain.com
ALETHEIA_API_KEY=your-aletheia-api-key-here
ALETHEIA_TIMEOUT=180
ALETHEIA_MAX_RETRIES=5

# ========================================
# OBSERVABILITY
# ========================================
LOG_LEVEL=info
OTEL_SERVICE_NAME=copilotos-bridge-staging
OTEL_ENDPOINT=http://jaeger:4317

# ========================================
# PERFORMANCE & LIMITS
# ========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=200
MAX_FILE_SIZE=52428800

# ========================================
# CORS & HOSTS
# ========================================
CORS_ORIGINS=["https://staging.yourdomain.com","http://localhost:3000"]
ALLOWED_HOSTS=["staging.yourdomain.com","api-staging","localhost"]