# SAPTIVA CopilotOS - Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Application Settings
NEXT_PUBLIC_APP_NAME="SAPTIVA CopilotOS"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Features Configuration
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_DEEP_RESEARCH=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false

# Default Settings
NEXT_PUBLIC_DEFAULT_MODEL="saptiva-cortex"
NEXT_PUBLIC_MAX_TOKENS=2000
NEXT_PUBLIC_TEMPERATURE=0.7

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# Development Only
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG=false