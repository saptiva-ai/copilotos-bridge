# Saptiva CopilotOS - Environment Variables
# LOCAL DEVELOPMENT CONFIGURATION

# API Configuration (LOCAL DEVELOPMENT)
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_WS_URL=ws://localhost:8001
NODE_ENV=development

# Application Settings
NEXT_PUBLIC_APP_NAME="Saptiva Copilot OS"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Features Configuration
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_DEEP_RESEARCH=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false

# Default Settings
NEXT_PUBLIC_DEFAULT_MODEL="SAPTIVA_CORTEX"
NEXT_PUBLIC_MAX_TOKENS=2000
NEXT_PUBLIC_TEMPERATURE=0.7

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# Development Only
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG=false
