# Production Environment Configuration
# API URL is dynamically determined by the client based on current domain
# This allows nginx to proxy requests correctly

# Production mode
NODE_ENV=production

# App Configuration
NEXT_PUBLIC_APP_NAME="Saptiva Copilot OS"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Features Configuration
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_DEEP_RESEARCH=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false

# Default Settings
NEXT_PUBLIC_DEFAULT_MODEL="SAPTIVA_CORTEX"
NEXT_PUBLIC_MAX_TOKENS=2000
NEXT_PUBLIC_TEMPERATURE=0.7

# Production optimization
NEXT_PUBLIC_DEV_MODE=false
NEXT_PUBLIC_DEBUG=false

# Note: NEXT_PUBLIC_API_URL is intentionally not set here
# The api-client will automatically use window.location.origin in production
# which allows nginx to handle the proxy to the backend