# App Configuration
NEXT_PUBLIC_APP_NAME=CopilotOS Bridge
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION=Intelligent research and chat platform

# API Configuration
NEXT_PUBLIC_API_URL=http://34.42.214.246/api
NEXT_PUBLIC_WS_URL=ws://34.42.214.246/api

# Feature Flags
NEXT_PUBLIC_ENABLE_DEEP_RESEARCH=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_CHAT_EXPORT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# UI Configuration
NEXT_PUBLIC_THEME_DEFAULT=light
NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true
NEXT_PUBLIC_MAX_CHAT_HISTORY=50
NEXT_PUBLIC_AUTO_SAVE_INTERVAL=30000

# Performance
NEXT_PUBLIC_STREAM_BUFFER_SIZE=1024
NEXT_PUBLIC_REQUEST_TIMEOUT=60000
NEXT_PUBLIC_RETRY_ATTEMPTS=3
NEXT_PUBLIC_DEBOUNCE_DELAY=300

# Models Configuration
NEXT_PUBLIC_DEFAULT_MODEL=SAPTIVA_CORTEX
NEXT_PUBLIC_AVAILABLE_MODELS=["SAPTIVA_CORTEX", "SAPTIVA_TURBO", "SAPTIVA_GUARD"]

# Research Configuration
NEXT_PUBLIC_DEFAULT_RESEARCH_TYPE=comprehensive
NEXT_PUBLIC_MAX_RESEARCH_SOURCES=20
NEXT_PUBLIC_RESEARCH_TIMEOUT=300000

# Analytics (if enabled)
NEXT_PUBLIC_ANALYTICS_ID=${ANALYTICS_ID}
NEXT_PUBLIC_GTM_ID=${GTM_ID}

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN_FRONTEND}
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_HTTPS_ONLY=true