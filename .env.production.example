# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================

# Basic Configuration
ENVIRONMENT=production
APP_VERSION=latest
DOMAIN=yourdomain.com

# Database Configuration (CHANGE THESE!)
MONGODB_USER=copilotos_prod
MONGODB_PASSWORD=CHANGE_ME_TO_VERY_SECURE_PASSWORD
REDIS_PASSWORD=CHANGE_ME_TO_VERY_SECURE_REDIS_PASSWORD

# Security (CHANGE THESE!)
JWT_SECRET_KEY=CHANGE_ME_TO_VERY_SECURE_JWT_SECRET_AT_LEAST_32_CHARS
SECRET_KEY=CHANGE_ME_TO_VERY_SECURE_SESSION_SECRET
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_DAYS=7

# URLs
FRONTEND_URL=https://yourdomain.com
PUBLIC_API_URL=https://api.yourdomain.com
API_HOST=api.yourdomain.com

# External Services
ALETHEIA_URL=https://aletheia.yourdomain.com
ALETHEIA_API_KEY=your-production-aletheia-api-key
ALETHEIA_TIMEOUT=120
ALETHEIA_RETRIES=3

# Performance & Limits
RATE_LIMIT=100
MAX_PROMPT_LENGTH=10000
MAX_UPLOAD_SIZE=10
STREAM_BACKPRESSURE=1000
STREAM_HEARTBEAT=5000
SSE_TIMEOUT=30000
DB_POOL_SIZE=20
DB_TIMEOUT=5000
DB_IDLE_TIME=300000
LOG_LEVEL=info

# Monitoring
JAEGER_ENDPOINT=https://jaeger.yourdomain.com:14268/api/traces
OTEL_ENDPOINT=https://jaeger.yourdomain.com:4317

# Analytics (Optional)
ANALYTICS_ID=your-google-analytics-id
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# GitHub Container Registry
GITHUB_USER=your-github-username
TOKEN=your-github-token-with-package-read-permissions

# Container Images
API_IMAGE=ghcr.io/your-username/copilotos-bridge/api:latest
WEB_IMAGE=ghcr.io/your-username/copilotos-bridge/web:latest

# Deployment
DEPLOY_PATH=/home/jf/copilotos-bridge
BACKUP_DIR=/home/jf/backups/copilotos-production